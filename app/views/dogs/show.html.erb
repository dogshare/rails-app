<p id="notice"><%= notice %></p>

<div class="center">
  <%= image_tag(@dog.img.url(:medium), :class => "img-circle") %>
  <h2><%= @dog.name %></h2>
  <p><em><%= @dog.dog_snippet %></em></p>
</div>

<div class="bio">
  <%= image_tag(@dog.owner.img.url(:thumb), :class => "img-circle") %>
  <p>
    <strong>Owner Name:</strong>
    <%= @dog.owner.name %>
  </p>
  <p>
  <strong>Age:</strong>
  <%= @dog.age %>
  </p>
  <p>
    <strong>Breed:</strong>
    <%= @dog.breed %>
  </p>
  <p>
  <strong>Housetrained:</strong>
  <%= @dog.housetrained %>
  </p>
  <p>
    <strong>Zip:</strong>
    <%= @dog.owner.zip %>
  </p>

<!-- add for each dog share -->
  <p>
    <strong>Available from:</strong>
    <%= @dog.dogshares.first.available_day_start %><br>
    <strong>Available to:</strong>
    <%= @dog.dogshares.first.available_day_end %>
</div>

<div class="main">
  <p>

    <strong>Description:</strong>
    <%= @dog.description %>
  </p>

  <p>
    <strong>Temperament:</strong>
    <%= @dog.temperament %>
  </p>

  <p>
    <strong>Active:</strong>
    <%= @dog.active %>
  </p>

  <p>
    <strong>Special needs:</strong>
    <%= @dog.special_needs %>
  </p>


</div>

<%= link_to 'Edit', edit_dog_path(@dog) %> |
<%= link_to 'Back', dogs_path %> |
<%= link_to 'Add availability', new_dogshare_path %>

