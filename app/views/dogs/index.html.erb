    <tr>
      <th>Name</th>
      <th>Age</th>
      <th>Breed</th>
      <th>Description</th>
      <th>Temperament</th>
      <th>Active</th>
      <th>Housetrained</th>
      <th>Picture</th>
      <th>Special needs</th>
      <th></th>
      <th></th>
