<link href="../assets/stylesheets/bootstrap.css" rel="stylesheet">

<p><a class="btn btn-default" href="<%= new_person_path %>" role="button">I'm a new doglover</a></p>

<div class="container marketing">
  <% count = 0 %>
  <% @people.each_slice(3) do |slice| %>
    <div class="row">
      <% slice.each do |person| %>
        <div class="col-lg-4 dog">
          <% person.img.url(:thumb) %>
          <img class="img-circle" data-src="holder.js/140x140" alt="Generic placeholder image">
          <h2><%= person.name %></h2>
          <p><%= person.person_snippet %></p>
          <p><a class="btn btn-default" href="<%= person_path(person) %>" role="button">View details &raquo;</a></p>
        </div><!-- /.col-lg-4 -->
      <% end %>
  </div><!-- /.row -->
  <% end %>
</div>

